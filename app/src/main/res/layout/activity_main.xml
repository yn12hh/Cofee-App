<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pouring_coffee_image"
        android:layout_width="418dp"
        android:layout_height="301dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/welcome_image" />

    <ImageView
        android:id="@+id/welcome_divider"
        android:layout_width="446dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toTopOf="@+id/app_logo_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pouring_coffee_image"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/line_welcome" />

    <ImageView
        android:id="@+id/app_logo_image"
        android:layout_width="127dp"
        android:layout_height="114dp"
        android:contentDescription="@string/applogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pouring_coffee_image"
        app:srcCompat="@drawable/app_logo" />

    <Button
        android:id="@+id/usual_button"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_take_an_order"
        android:onClick="usualOrder"
        android:padding="10dp"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back_mr_gindi_image" />

    <ImageView
        android:id="@+id/welcome_back_mr_gindi_image"
        android:layout_width="158dp"
        android:layout_height="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo_image"
        app:srcCompat="@drawable/welcome_back" />

    <Button
        android:id="@+id/registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#00927E7E"
        android:gravity="center"
        android:onClick="registerNow"
        android:text="Personal Info"
        android:textAlignment="center"
        android:textColor="#636161"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Personal Info" />
</androidx.constraintlayout.widget.ConstraintLayout>