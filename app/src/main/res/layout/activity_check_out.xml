<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:textDirection="ltr"
    tools:context=".checkOut">


    <ImageView
        android:id="@+id/check_out_title"
        android:layout_width="398dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:padding="3dp"
        app:srcCompat="@drawable/checkout_title" />

    <ImageView
        android:id="@+id/checkout_title_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line_welcome" />

    <ScrollView
        android:id="@+id/order_finish_layout"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:layoutDirection="ltr"
        android:textDirection="ltr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/your_order_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/your_order" />

            <LinearLayout
                android:id="@+id/order_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:textDirection="ltr">

                <LinearLayout
                    android:id="@+id/categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:textDirection="ltr">

                    <TextView
                        android:id="@+id/type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/type"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textColorHighlight="#005C5454"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/size"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textColorHighlight="#005C5454"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/milk_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/milk"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textColorHighlight="#005C5454"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sugar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/sugar"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textColorHighlight="#005C5454"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/intesity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/intensity"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textColorHighlight="#005C5454"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_parameters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:textDirection="ltr">

                    <TextView
                        android:id="@+id/user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_milk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_sugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_intensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/coffee_icon"
                    android:layout_width="241dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:baselineAlignBottom="false"
                    android:foregroundGravity="center_vertical|right"
                    android:src="@drawable/small_color" />

            </LinearLayout>

            <ImageView
                android:id="@+id/checkout_upper_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/divider" />

            <ImageView
                android:id="@+id/buildings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/buldings" />

            <ImageView
                android:id="@+id/send_to_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/send_to" />

            <EditText
                android:id="@+id/location_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:hint="@string/hint_location_field"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/text_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/clock" />

            <ImageView
                android:id="@+id/at"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/at" />

            <Button
                android:id="@+id/time_input"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00927E7E"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/checkout_upper_divider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                app:srcCompat="@drawable/divider" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_send_button"
        android:layout_width="206dp"
        android:layout_height="39dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/order_finish_backgound"
        android:onClick="finishOrder"
        android:textSize="24sp" />


</LinearLayout>